# Flask Configuration
FLASK_APP=app_final.py
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=your-secret-key-here
SERVER_PORT=5000
WEBAPP_PORT=5001

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/terminusa
POSTGRES_USER=terminusa
POSTGRES_PASSWORD=your-db-password-here
POSTGRES_DB=terminusa

# Terminal Server Configuration
TERMINAL_PORT=6789
TERMINAL_HOST=0.0.0.0
TERMINAL_LOG_LEVEL=INFO

# Web3 Configuration
SOLANA_NETWORK=devnet  # mainnet, testnet, or devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
EXONS_TOKEN_ADDRESS=your-token-address-here
MARKETPLACE_PROGRAM_ID=your-program-id-here

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379/0

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_SENDER=noreply@terminusa.online

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/terminusa.online/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/terminusa.online/privkey.pem

# Domain Configuration
MAIN_DOMAIN=terminusa.online
PLAY_DOMAIN=play.terminusa.online

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO
LOG_DIR=/var/log/terminusa

# Security
ALLOWED_HOSTS=terminusa.online,play.terminusa.online,*.terminusa.online
CORS_ORIGINS=https://terminusa.online,https://play.terminusa.online

# Game Configuration
INITIAL_CRYSTALS=100
INITIAL_HUNTER_LEVEL=1
MAX_INVENTORY_SLOTS=50
DUNGEON_LEVEL_CAP=100
CRYSTAL_DROP_RATE=0.5
ITEM_DROP_RATE=0.3

# Marketplace Configuration
MARKETPLACE_FEE_PERCENTAGE=2.5
MIN_LISTING_PRICE=0.1
MAX_LISTING_DURATION=604800  # 7 days in seconds

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300

# Development Options (set to False in production)
DEVELOPMENT_MODE=False
TESTING=False
DEBUG_TOOLBAR=False
