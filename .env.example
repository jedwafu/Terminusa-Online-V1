# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://terminusa_user:strongpassword@localhost/terminusa

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Server Ports
SERVER_PORT=5000
WEBAPP_PORT=5001

# Game Configuration
STARTING_CRYSTALS=20
STARTING_EXONS=0
STARTING_INVENTORY_SLOTS=20

# Debug Mode
FLASK_DEBUG=False

# Domain Configuration
DOMAIN_NAME=terminusa.online
VERIFICATION_URL=https://play.terminusa.online/verify

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/terminusa.online/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/terminusa.online/privkey.pem

# Monitoring
PROMETHEUS_ENABLED=False
ELASTICSEARCH_URL=http://localhost:9200
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5959

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=300/hour
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Cache
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/2
CACHE_DEFAULT_TIMEOUT=300

# Session
SESSION_TYPE=redis
SESSION_REDIS=redis://localhost:6379/3
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=3600

# Security
SECURITY_PASSWORD_SALT=your-password-salt-here
SECURITY_PASSWORD_HASH=bcrypt
SECURITY_REGISTERABLE=True
SECURITY_CONFIRMABLE=True
SECURITY_RECOVERABLE=True
SECURITY_CHANGEABLE=True

# Game Balance
XP_MULTIPLIER=1.0
CRYSTAL_DROP_RATE=1.0
ITEM_DROP_RATE=1.0
BOSS_SPAWN_RATE=0.1
ELITE_SPAWN_RATE=0.2
