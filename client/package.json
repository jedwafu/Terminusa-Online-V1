{
  "name": "terminusa-client",
  "version": "1.0.0",
  "description": "Terminal client for Terminusa Online using xterm.js",
  "main": "js/terminal.js",
  "scripts": {
    "start": "python -m http.server 3000",
    "install-deps": "npm install",
    "postinstall": "mkdir -p css/fonts && cp node_modules/xterm/css/xterm.css css/ && cp node_modules/xterm/lib/xterm.js js/"
  },
  "dependencies": {
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "xterm-addon-webgl": "^0.16.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/terminusa-online"
  },
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  }
}
