# Auto detect text files and perform LF normalization
* text=auto

# Force shell scripts to use LF
*.sh text eol=lf
*.bash text eol=lf

# Force batch scripts to use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Source code
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
.env* text eol=lf
requirements*.txt text eol=lf
Dockerfile text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
LICENSE text eol=lf
*.txt text eol=lf

# Database files
*.sql text eol=lf
*.sqlite text eol=lf

# Binary files (no conversion)
*.db binary
*.sqlite3 binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.exe binary
